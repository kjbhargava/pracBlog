<%- include("partials/header"); -%>
<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label for="writingTitle">Title</label>
        <input type="text" class="form-control" name="writingTitle" placeholder="Enter Title">
        <label for="writingBody">Post</label>
        <textarea class="form-control" name="content" rows="20" cols="160" placeholder="Start writing here"></textarea>
    </div>
    <button type="submit" class="btn btn-warning btn-outline-primary" name="button">Publish</button>
</form>
<%- include("partials/footer"); -%>
